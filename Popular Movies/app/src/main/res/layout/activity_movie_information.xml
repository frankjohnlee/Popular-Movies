<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.frankhaolunlipopularmovies.MovieInformation">

    <TextView
        android:id="@+id/oveview"
        android:layout_width="346dp"
        android:layout_height="184dp"
        android:text="Blah blah blah blah blah blah description"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/poster_image"
        android:layout_width="138dp"
        android:layout_height="186dp"
        app:srcCompat="@android:drawable/gallery_thumb"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/release_date"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="2dp"
        app:layout_constraintTop_toTopOf="@+id/movie_title"
        app:layout_constraintLeft_toRightOf="@+id/original_language"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="64dp"
        tools:layout_editor_absoluteX="230dp" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:text="Rating: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/popularity"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_title"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/popularity" />

    <CheckedTextView
        android:id="@+id/popularity"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:text="Popularity: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/original_language"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/rating"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/original_language" />

    <TextView
        android:id="@+id/original_language"
        android:layout_width="201dp"
        android:layout_height="27dp"
        android:text="Original Language: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/overview_title"
        android:layout_marginTop="108dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="108dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rating"
        android:layout_marginLeft="16dp"
        tools:layout_editor_absoluteY="165dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/release_date"
        android:layout_width="201dp"
        android:layout_height="26dp"
        android:text="Release Date: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/overview_title"
        android:layout_marginEnd="1dp"
        app:layout_constraintRight_toRightOf="@+id/popularity"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/original_language"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/overview_title"
        android:layout_marginRight="1dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/overview_title"
        android:layout_width="86dp"
        android:layout_height="19dp"
        android:text="Overview: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/oveview"
        android:layout_marginTop="195dp"
        app:layout_constraintTop_toBottomOf="@+id/rating"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="195dp"
        app:layout_constraintLeft_toLeftOf="@+id/oveview" />




</android.support.constraint.ConstraintLayout>

